<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    >
    <include
        layout="@layout/toolbar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#973961"
        android:layout_marginBottom="50dp">
        <TextView
            android:id="@+id/chemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surgery"
            android:textColor="#FFB9BF"
            android:textSize="27dp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/sen"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_below="@id/chemo"
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="include a mastectomy, which removes the whole breast, and a lumpectomy, which removes only the tumor and the tissues around it."
            android:textColor="#FFFFFF"
            android:textSize="19dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/sen"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_below="@id/text1"
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Side Effects"
            android:textColor="#FFB9BF"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:layout_marginLeft="22dp"
            android:fontFamily="@font/sen"
            />
        <TextView
            android:id="@+id/text3"
            android:layout_below="@id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It may cause short-term pain, the muscles of the arm may feel weak, the skin in the breast area may feel tight. Surgery involving the lymph nodes may also cause swelling in the arm."
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="19dp"
            android:fontFamily="@font/sen"
            />
        <Button
            android:id="@+id/FAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:paddingTop="14dp"
            android:layout_below="@id/text3"
            android:paddingBottom="14dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:fontFamily="@font/sen"
            android:layout_marginLeft="20dp"
            android:background="@drawable/border"
            android:layout_marginRight="20dp"
            android:text="FAQ'S regarding Chemotherapy"
            />
        <TextView
            android:layout_below="@id/FAQ"
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="You can also connect to our doctors to know more about Therapies for breast cancer by tapping on the call button"
            android:textColor="#000000"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:fontFamily="@font/sen"/>
        <Button
            android:layout_below="@id/text4"
            android:id="@+id/call"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Call  "
            android:fontFamily="@font/sen_regular"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:paddingLeft="40dp"
            android:paddingTop="9dp"
            android:paddingBottom="12dp"
            android:paddingRight="23dp"
            android:drawableRight="@drawable/ic_call"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_border"
            android:textSize="24dp"/>


    </RelativeLayout>
</LinearLayout>